{
  "extends": [
    "standard",
    "plugin:react/recommended",
    "plugin:prettier/recommended",
    "plugin:react-hooks/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "env": { "es6": true, "browser": true },
  "rules": {
    "react-hooks/exhaustive-deps": "error"
  }
}
